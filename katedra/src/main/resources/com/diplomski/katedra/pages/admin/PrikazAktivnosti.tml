<html t:type="adminLayout" title="About katedra"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter"
      xmlns:j="tapestry-library:jquery">
<head>
    <h1>prikaz aktivnost</h1>
</head>
<body>
<t:form t:id="filterForm" t:zone="activityZone">
    <t:errors/>
    <select t:type="select" value="year" validate="required" model="years"/>
    <select t:type="select" value="selectedPredmet" validate="required" model="predmetSelectModel" encoder="predmetEncoder"/>
    <input type="submit" value="Prikazi"/>
</t:form>
<t:zone t:id="activityZone" id="activityZone" style="display: inline;">
    <t:if test="selectedPredmet">
    <table t:type="jquery/datatable" t:id="activitiesdt" t:source="activities" t:row="activity"
       t:rowsPerPage="5" t:add="student, datum" t:options="options" t:zone="activityZone">

    <!--<p:studentHeader>Student</p:studentHeader>-->
    <!--<p:studentHeader>Student</p:studentHeader>-->

    <!--<p:firstNameFooter>Prenom Footer</p:firstNameFooter>-->

    <p:studentCell>${activity.student.brojIndeksa}</p:studentCell>
    <p:datumCell>${activity.aktivnost.datum}</p:datumCell>

    <!--<p:linkCell><t:ActionLink t:zone="zone" t:mixins="jquery/tooltip" title="tooltup">${current?.lastName}</t:ActionLink></p:linkCell>-->

    </table>
    </t:if>
</t:zone>
</body>
</html>
